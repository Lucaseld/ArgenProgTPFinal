<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libreria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4Ck+OGpPW1PnJWAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-9DmgWl9KFTo6G2WgAIy2yC06Rlm4LcQ0Mp3XHw2q7+HAf8CQYcKA9pRMZpJkCIkz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand mx-auto">Socios</a>
        <a href="/prestamos" class="navbar-brand mx-auto">Prestamos</a>
        <a href="/carga" class="navbar-brand mx-auto ">Provincias</a>
        <a href="/generos" class="navbar-brand mx-auto ">Generos</a>
        <a href="/categorias" class="navbar-brand mx-auto ">Categorias</a>
        <a href="/nacionalidades" class="navbar-brand mx-auto ">Nacionalidades</a>
        <a href="/autores" class="navbar-brand mx-auto ">Autores</a>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <h1 class="card-title text-center my-5">Autores</h1>
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Nacionalidad</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <% for(var i=0; i< autores.length; i++) { %>
                    <tr>
                        <td><%= autores[i].id_autor %></td>
                        <td><%= autores[i].nombre %></td>
                        <td><%= autores[i].apellido %></td>
                        <td><%= autores[i].nacionalidad %></td>
                        <td><a href="/borrar_autor/<%= autores[i].id_autor %>" class="btn btn-danger">Borrar</a></td>
                        <td><a href="/editar_autor/<%= autores[i].id_autor %>" class="btn btn-info">Editar</a></td>
                        </tr>
                    <% } %>
                </table>
            </div>

            <div class="col-md-6 mt-4 card">
                <form action="/autores" method="post" class="card-body">
                    <h3 class="card-title">Agregar Autor</h3>
                    <div class="form-group mt-4">
                        <input type="text" name="nombre" class="form-control">
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" name="apellido" class="form-control">
                    </div>
                    <label for="nacionalidadId">Nacionalidad: </label>
                    <select name="nacionalidadId">
                        <% nacionalidades.forEach(nacionalidades=> { %>
                            <option value="<%= nacionalidades.id_nacionalidad %>"><%= nacionalidades.nombre %></option>
                        <% }) %>
                    </select>
                    <input type="submit" class="btn btn-primary my-4" value="Guardar">
                </form>
            </div>
            
        </div>
    </div>

    <div class="container">
    </div>


</body>


</html>
