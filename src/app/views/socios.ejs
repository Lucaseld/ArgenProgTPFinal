<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Libreria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand mx-auto">Socios</a>
        <a href="/prestamos" class="navbar-brand mx-auto">Prestamos</a>
        <a href="/carga" class="navbar-brand mx-auto ">Provincias</a>
        <a href="/generos" class="navbar-brand mx-auto ">Generos</a>
        <a href="/categorias" class="navbar-brand mx-auto ">Categorias</a>
        <a href="/nacionalidades" class="navbar-brand mx-auto ">Nacionalidades</a>
        <a href="/autores" class="navbar-brand mx-auto ">Autores</a>
    </nav>
    <div class="m-lg-4 ">
        <div class="text-center">
            <a href="/alta_socio" class="btn btn-primary">Alta Socio</a>

        </div>
        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped">
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th>APELLIDO</th>
                        <th>FECHA NAC.</th>
                        <th>ID GENERO</th>
                        <th>GENERO</th>
                        <th>DNI</th>
                        <th>DIRECCION</th>
                        <th>LOCALIDAD</th>
                        <th>ID PROVINCIA</th>
                        <th>PROVINCIA</th>
                        <th>TELEFONO</th>
                        <th>EMAIL</th>
                        <th>FECHA ALTA</th>
                        <th>ID CATEGORIA</th>
                        <th>CATEGORIA</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <% for(var i=0; i< socios.length; i++) { %>
                    <tr>
                        <td><%= socios[i].id_socio %></td>
                        <td><%= socios[i].nombre %></td>
                        <td><%= socios[i].apellido %></td>
                        <td><%= new Date(socios[i].fecha_nacimiento).toLocaleDateString(undefined, { day: 'numeric' ,  month: 'numeric', year: 'numeric' }) %></td>
                        <td><%= socios[i].id_genero %></td>
                        <td><%= socios[i].genero %></td>
                        <td><%= socios[i].dni %></td>
                        <td><%= socios[i].direccion %></td>
                        <td><%= socios[i].localidad %></td>
                        <td><%= socios[i].id_provincia %></td>
                        <td><%= socios[i].provincia %></td>
                        <td><%= socios[i].telefono %></td>
                        <td><%= socios[i].email %></td>
                        <td><%= new Date(socios[i].fecha_alta).toLocaleDateString(undefined, { day: 'numeric' ,  month: 'numeric', year: 'numeric' }) %></td>
                        <td><%= socios[i].id_categoria %></td>
                        <td><%= socios[i].categoria %></td>
                        <td><a href="/borrar_socio/<%= socios[i].id_socio %>" class="btn btn-danger">Borrar</a></td>
                        <td><a href="/editar_socio/<%= socios[i].id_socio %>" class="btn btn-info">Editar</a></td>
                    </tr>
                    <% } %>
                </table>
            </div>

 <div>           
</div>          
        </div>
    </div>


</body>


</html>